
 <style>
.create-btn{
    background:#25b18e ;
    border-radius: 30px;
    padding: 15px;
    border: none;
    color: #fff;
    cursor: pointer;
    margin: 20px;

}
.modal{
    position: absolute;
    background: rgba(0, 0, 0, 0.5);
    display: none;
    transition: 0.5s;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    top: 0;

}
.modal-form{
    background: #fff;
    padding: 20px;
    border-radius: 15px;
     
   
}
.form-field{
    display: flex;
    flex-direction: column;
}
.input-fields{
    padding: 10px;
}
.input-btn{
    margin: 10px;
    padding: 10px;
    background:#25b18e ;
    border-radius: 30px;
    border: none;
    width: 100px;
    color: #fff;
}
.close-btn{
    position: absolute;
    top: 0;
    right: 0;
    margin: 30px;
    font-size: 30px;
    cursor: pointer;
    
}
    </style>


    <div class="modal">
        <button class="close-btn">X</button>
        <div class="modal-form">
            <form class="nft-form" method="POST" action="/api/v1/nft/create" enctype="multipart/form-data">
                <div class="form-field">
                  <label for="name">Name:</label>
                  <input class="input-fields" type="text" id="name" name="name" required>
                </div>
                <div class="form-field">
                  <label for="description">Description:</label>
                  <textarea id="description" name="description" rows="4" required></textarea>
                </div>
                <div class="form-field">
                  <label for="image">Image File:</label>
                  <input class="input-fields" type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-field">
                  <label for="price">Price:</label>
                  <input class="input-fields" type="number" id="price" name="price" required>
                </div>
                <div class="form-submit">
                  <input class="input-btn" type="submit" value="Submit">
                </div>
              </form>
        </div>
    </div>
<button class="create-btn">Create +</button>


<script>
    const btn=document.querySelector('.create-btn')
    const closeBtn=document.querySelector('.close-btn')
    const modal=document.querySelector('.modal')
    modal.style.display='none'
    const modalShow=()=>{
        if(modal.style.display==='none'){
            modal.style.display='flex'
        }else{
            modal.style.display='none'
        }

    }
    btn.addEventListener('click',modalShow)
    closeBtn.addEventListener('click',modalShow)
     const nftForm=document.querySelector('.nft-form')
     nftForm.addEventListener('submit',(e)=>{
        e.preventDefault()
     })
</script>
